<h1>On Going Tasks</h1>

<ul>
  <% @incomplete_tasks.each do |task| %>
    <li>
      <%= task.name %> - incomplete
      <%= link_to 'Mark as Complete', toggle_status_path(task) %>
      <%= button_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path %>
<%= link_to "Back to tasks list", tasks_path %>
<%= link_to "Complete task", complete_task_path %>